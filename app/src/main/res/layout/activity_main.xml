<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jing.circleprogressview.MainActivity"
    >

  <com.jing.circleprogressview.ProgressView
      app:pv_inner_top="30dp"
      app:pv_inner_left="29dp"
      app:pv_outter_left="29dp"
      app:pv_outter_top="30dp"
      app:pv_textsize="30sp"
      app:pv_text_height="2dp"
      android:id="@+id/progress"
      android:layout_width="190dp"
      android:layout_height="190dp"
      android:elevation="1dp"
      android:layout_centerHorizontal="true"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"
      />

</android.support.constraint.ConstraintLayout>
