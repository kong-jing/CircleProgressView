<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jing.circleprogressview.MainActivity"
    >

  <com.jing.circleprogressview.ProgressView
      app:pv_inner_circle="@dimen/pv_circle_width"
      app:pv_outter_circle="@dimen/pv_circle_width"
      app:pv_textsize="@dimen/pv_textsize"
      app:pv_xsd_textsize="@dimen/pv_xsd_textsize"
      app:pv_stroke_width="@dimen/pv_stroke_width"
      app:pv_stroke_width_outter="@dimen/pv_stroke_width_outter"
      app:pv_text_height="2dp"
      android:id="@+id/progress"
      android:layout_width="@dimen/progressview_idread"
      android:layout_height="@dimen/progressview_idread"
      android:elevation="1dp"
      android:layout_centerHorizontal="true"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"
      />

</android.support.constraint.ConstraintLayout>
